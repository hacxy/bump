{
  "name": "@hacxy/bump",
  "type": "module",
  "version": "0.2.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "Version release tools.",
  "author": {
    "name": "hacxy",
    "email": "hacxy.js@outlook.com",
    "url": "https://hacxy.cn"
  },
  "license": "MIT",
  "keywords": [
    "cli"
  ],
  "bin": {
    "bump": "index.js"
  },
  "files": [
    "dist",
    "index.js"
  ],
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "tsdown --watch",
    "build": "tsdown --clean",
    "cz": "czg",
    "typecheck": "tsc --noEmit",
    "release": "npm run build && node index.js -c -t -m 'chore: release: bump v{version}'",
    "test": "vitest run",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:staged": "eslint --fix",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "conventional-changelog": "^7.1.1",
    "conventional-changelog-angular": "^8.0.0",
    "mri": "^1.2.0"
  },
  "devDependencies": {
    "@hacxy/eslint-config": "^0.4.1",
    "@hacxy/fe": "^0.6.1",
    "@hacxy/tsconfig": "^0.1.0",
    "@types/node": "^20.12.5",
    "@types/prompts": "^2.4.9",
    "@types/semver": "^7.7.0",
    "consola": "^3.4.2",
    "czg": "^1.12.0",
    "eslint": "^9.16.0",
    "execa": "^9.6.0",
    "lint-staged": "^15.2.11",
    "picocolors": "^1.1.1",
    "prompts": "^2.4.2",
    "semver": "^7.7.2",
    "simple-git-hooks": "^2.11.1",
    "tsdown": "^0.16.6",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx fe msg"
  },
  "lint-staged": {
    "*": [
      "npm run lint:staged"
    ]
  }
}
